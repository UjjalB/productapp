<%= simple_form_for @product, :html => { :multipart => true } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, input_html: {class: "length-modifier"} %>
    <%= f.input :category_id,:label=> 'Category',:collection => (Category.all.blank? ? [] : Category.all.map{ |p| [(p.name), p.id] }),:prompt => "Select a Category", input_html: {:class=> "form-control length-modifier"} %>
    <%= f.file_field :avatar %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "margin-modifier" %>
  </div>
<% end %>
