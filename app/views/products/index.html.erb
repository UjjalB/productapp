<h1>Listing products</h1>

<table border="2px solid #000" class="table-modifier" >
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag product.avatar, class: "image-modifier" %></td>
        <td><%= product.name %></td>
        <td><%= link_to 'Show', product, class: "btn btn-default space-modifier" if can? :show, Product %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-default space-modifier" if can? :update, Product %></td>
        <td><%= link_to 'Destroy', product, class: "btn btn-default space-modifier", method: :delete, data: { confirm: 'Are you sure?' } if can? :delete, Product %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path, class: "btn btn-default" if can? :create, Product %>
