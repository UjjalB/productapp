<h1>Listing categories</h1>

<table border="2px solid #000" class="table-modifier">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Show', category, class: "btn btn-default space-modifier" if can? :show, Category %></td>
        <td><%= link_to 'Edit', edit_category_path(category), class: "btn btn-default space-modifier" if can? :update, Category %></td>
        <td><%= link_to 'Destroy', category, class: "btn btn-default space-modifier", method: :delete, data: { confirm: 'Are you sure?' } if can? :delete, Category %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, class: "btn btn-default" if can? :create, Category %>
